/* miniprogram/pages/userDetail/userDetail.wxss */

.detail-item {
  padding: 20rpx;
  height: 140rpx;
  width: 710rpx;
  border-bottom: 2rpx solid #cdcdcd;
  display: flex;
  align-items: center;
  justify-content: space-between; 
  font-size: 36rpx;
}
.detail-item-photo {
  padding: 20rpx;
  height: 200rpx;
  width: 710rpx;
  border-bottom: 2rpx solid #cdcdcd;
  display: flex;
  align-items: center;
  justify-content: space-between; 
}
.detail-item-photo image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}
.detail-phoneNumber, .detail-weixinNumber {
  margin-right: 10rpx;
}
.detail-item-text {
  color: red;
}
.friend {
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 38rpx;
}
button {
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
}