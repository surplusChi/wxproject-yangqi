/* components/search/search.wxss */
.container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  z-index: 99;
  overflow: hidden;
  background: #fff;
}
.containerFoucs {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
  background: #ccc;
}
.search {
  height: 60rpx;
  display: flex;
  align-items: center;
  margin: 20rpx;
}
.search-text {
  display: flex;
  align-items: center;
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #cdcdcd;
  border-radius: 10rpx;
  background: #fff;
}
.search-text .iconsousuo {
  margin: 0 20rpx;
}
.search-text input { flex: 1;}
.search-cancel {
  margin: 0 10rpx;
}
.iconfont {
  font-size: 45rpx;
}
.search-history {
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
  margin-bottom: 40rpx;
}
.search-history-btn {
  margin-bottom: 40rpx;
}
.search-history-btn text {
  border: 2rpx solid #cdcdcd;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  margin: 10rpx;
  background: #fff;
}

.searchList-item {
  display: flex;
  align-items: center;
  justify-content: space-between; 
  height: 100rpx; 
  border-bottom: 2rpx solid #cdcdcd ;
  padding: 10rpx;
}
.searchList-item view {
  display: flex;
  align-items: center;
}
.searchList-item-text {
  text-indent: 20rpx;
}
.searchList-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.navigator-hover {
  color: #1296db;
}